<!-- home.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Talkative</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background: linear-gradient(135deg, #89f7fe 0%, #66a6ff 100%);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .navbar-brand {
      font-weight: bold;
      font-size: 1.8rem;
      color: #ffffff !important;
    }
    .navbar {
      background-color: transparent;
    }
    .home {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      min-height: 90vh;
      text-align: center;
    }
    .home h1 {
      font-size: 4rem;
      font-weight: bold;
      color: #fff;
    }
    .home p {
      font-size: 1.2rem;
      color: #e7e7e7;
      margin-bottom: 30px;
      max-width: 600px;
    }
    .home a.btn {
      padding: 12px 30px;
      font-size: 1.2rem;
      background-color: #ffffff;
      color: #007bff;
      border-radius: 30px;
      transition: 0.3s ease;
    }
    .home a.btn:hover {
      background-color: #f1f1f1;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="/">Talkative</a>
      <div class="ms-auto">
        <a class="btn btn-light me-2" href="/login">Login</a>
        <a class="btn btn-outline-light" href="/signup">Signup</a>
      </div>
    </div>
  </nav>

  <div class="home">
    <h1>Talkative</h1>
    <p>Connect with everyone. Real-time, simple, and fun chatting experience at your fingertips.</p>
    <a href="/login" class="btn">Get Started</a>
  </div>
</body>
</html>
